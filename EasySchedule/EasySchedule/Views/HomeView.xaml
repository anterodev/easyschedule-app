<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasySchedule.Views.HomeView"
             Title="Easy Schedule">
  
  <ContentPage.Content>
    <StackLayout Padding="10" Spacing="20">
      <ListView x:Name="list" ItemsSource="{Binding Items}" SeparatorVisibility="None">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding Day}"
            TextColor="#4CAF50" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>