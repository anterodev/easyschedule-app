<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasySchedule.Views.NewScheduleView"
             Title="New Schedule">
  <ContentPage.Content>
    <StackLayout>
      <Entry x:Name="desc" Placeholder="Description" Text="{Binding Description}" Keyboard="Text"></Entry>
      <Button x:Name="save" Text="Create" Command="{Binding AddCommand}"></Button>
    </StackLayout>
  </ContentPage.Content>
  
</ContentPage>